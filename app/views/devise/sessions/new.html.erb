<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
  <label for="inputEmail" class="visually-hidden">Email address</label>
  <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "email" %>
  <label for="inputPassword" class="visually-hidden">Password</label>
  <%= f.password_field :password, autocomplete: "current-password",id: "inputPassword", placeholder: "Password", class: "form-control" %>

    <div class="checkbox mb-3">
    <label><input type="checkbox" value="remember-me"> Remember me</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
  <% end %>

  <%= render "devise/shared/links" %>
</section>